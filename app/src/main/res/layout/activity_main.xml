<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView

        android:text= "Choose one color"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:textColor="#000000"
        style="@style/CategoryStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <TextView

            android:background="@color/base_brown"
            android:id ="@+id/base_brown"
            style="@style/CategoryStyle"
            android:text="Base Brown"


            />


        <TextView
        style="@style/CategoryStyle"
            android:id="@+id/dark_brown"
        android:text="Dark Brown"
        android:background="@color/dark_brown_color"

        />
        <TextView
            style="@style/CategoryStyle"
            android:id="@+id/tan"
            android:text = "Tan"
            android:background="@color/tan_color"


            />
        <TextView
            style="@style/CategoryStyle"
            android:text="Brick"
            android:background="@color/brick_color"
            android:id="@+id/brick_color"/>
        <TextView
            style="@style/CategoryStyle"
            android:text="Violet"
            android:background="@color/violet"
            android:id="@+id/violet"

            />





        <TextView
            style="@style/CategoryStyle"
            android:text="Slate"
            android:background="@color/slate_color"
            android:id="@+id/slate"

            />
        <TextView
            style="@style/CategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Recommendations: "
            android:textColor="#000000"/>


        <TextView
            style="@style/CategoryStyle"
            android:textColor="#000000"
            android:text= " "
            android:id= "@+id/color_recommendations"
           />
    </LinearLayout>
</LinearLayout>

</ScrollView>